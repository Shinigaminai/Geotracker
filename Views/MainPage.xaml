<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Geotracker.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Geotracker.Controls"
    xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
    xmlns:models="clr-namespace:Geotracker.Models">

    <Grid>
        <Image x:Name="TrailMap" Source="dotnet_bot.png" />
        <!-- <mapsui:MapControl
            x:Name="TrailMap"
            BackgroundColor="White"
            VerticalOptions="Fill" />-->

        <controls:BottomDrawerView ButtonClicked="OnAddTrailClicked" VerticalOptions="End">
            <CollectionView
                x:Name="TrailsCollection"
                HeightRequest="300"
                ItemsLayout="VerticalList"
                ItemsSource="{Binding Trails}"
                VerticalOptions="Fill">
                <CollectionView.EmptyView>
                    <ContentView>
                        <Grid HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="There are currently no trails loaded..." />
                        </Grid>
                    </ContentView>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Trail">
                        <Grid
                            Padding="4"
                            ColumnDefinitions="Auto, *"
                            RowDefinitions="Auto, Auto">
                            <Image
                                Grid.RowSpan="2"
                                Aspect="AspectFill"
                                HeightRequest="60"
                                Source="{Binding ImageUrl}"
                                WidthRequest="60" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                Text="{Binding Name}"
                                TextColor="{StaticResource PrimaryDarkText}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontAttributes="Italic"
                                Text="{Binding Location}"
                                TextColor="{StaticResource SecondaryDarkText}"
                                VerticalOptions="Center" />
                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </controls:BottomDrawerView>
    </Grid>
</ContentPage>
